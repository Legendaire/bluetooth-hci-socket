{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2016
  },
  "extends": "eslint:recommended",
  "rules": {
    "eqeqeq": "error",
    "no-bitwise": "off",
    "curly": "error",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
